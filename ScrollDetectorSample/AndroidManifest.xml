<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.tangke.scrolldetectorsample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SampleActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sample.ViewPagerScrollDetectorActivity"
            android:label="@string/title_view_pager_scroll_detector" >
            <intent-filter>
                <action android:name="me.tangke.scrolldetectorsample.SAMPLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sample.WebViewScrollDetectorActivity"
            android:label="@string/title_web_view_scroll_detector" >
            <intent-filter>
                <action android:name="me.tangke.scrolldetectorsample.SAMPLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sample.ListViewScrollDetectorActivity"
            android:label="@string/title_list_view_scroll_detector" >
            <intent-filter>
                <action android:name="me.tangke.scrolldetectorsample.SAMPLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sample.HorizontalScrollViewScrollDetectorActivity"
            android:label="@string/title_horizontal_scroll_view_scroll_detector" >
            <intent-filter>
                <action android:name="me.tangke.scrolldetectorsample.SAMPLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sample.ScrollViewScrollDetectorActivity"
            android:label="@string/title_scroll_view_scroll_detector" >
            <intent-filter>
                <action android:name="me.tangke.scrolldetectorsample.SAMPLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sample.GridViewScrollDetectorActivity"
            android:label="@string/title_grid_view_scroll_detector" >
            <intent-filter>
                <action android:name="me.tangke.scrolldetectorsample.SAMPLE" />
            </intent-filter>
        </activity>
    </application>

</manifest>